generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int @id @default(autoincrement())
  name              String
  firstName         String
  lastName          String
  alias             String
  cpf               String @unique
  dateOfBirth       DateTime
  phone             String
  email             String @unique
  password          String
  cep               String?
  streetName        String?
  city              String?
  residenceNumber   String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Product {
  id        String @id
  name      String @unique
  type      String
  price     Float
  stock     Int
}