{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src", // Ajustado para 'src' se seus arquivos estiverem na pasta 'src'
    "paths": {
      "*": ["node_modules/*"], // Adiciona configuração para resolver módulos de node_modules
      "@/*": ["*"] // Permite importar usando caminhos baseados no 'src'
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos TypeScript na pasta 'src'
  "exclude": ["node_modules"] // Exclui a pasta 'node_modules'
}
